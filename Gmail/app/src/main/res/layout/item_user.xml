<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:paddingBottom="2dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvAggName"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@drawable/icon_user"
        android:gravity="center"
        android:text="q"
        android:textAllCaps="true"
        android:textSize="35sp"
        android:textColor="#fff"/>
    <ImageButton
        android:id="@+id/imgbStore"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/tvAggName"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/imgbStore"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="quannar178"
        android:textColor="#201B1B"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/tvName"
        android:gravity="center"
        android:text="09:11:AM"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvDes1"
        android:layout_width="245dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tvName"
        android:layout_toRightOf="@id/tvAggName"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvDes2"
        android:layout_width="245dp"
        android:layout_height="28dp"
        android:layout_below="@id/tvDes1"
        android:layout_toRightOf="@id/tvAggName"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:ellipsize="end" />
    <CheckBox
        android:id="@+id/cbStar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tvName"
        android:layout_alignParentRight="true"
        android:button="@drawable/icon_star"/>

    

</RelativeLayout>